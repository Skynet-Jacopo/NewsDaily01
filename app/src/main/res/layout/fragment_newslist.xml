<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.liuqun.newsdaily.ui.FragmentMian">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.example.liuqun.newsdaily.view.HorizontalListView
            android:id="@+id/hl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_moretype"/>

        <ImageView
            android:id="@+id/iv_moretype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/drawable_moretype_selector"/>
    </RelativeLayout>

    <com.example.liuqun.newsdaily.view.xlistview.XListView
        android:layout_width="match_parent"
        android:id="@+id/news_list"
        android:layout_height="match_parent"/>

</LinearLayout>
